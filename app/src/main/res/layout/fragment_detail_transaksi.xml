<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:text="Detail Transaksi"
                    android:fontFamily="@font/montserratl"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </Toolbar>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:background="@color/white"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/white"
                    android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_subjek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Bayar SPP"
                    android:fontFamily="@font/montserratr"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/img_status"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="Success"
                    android:textColor="@color/Blue"
                    android:fontFamily="@font/montserratr"
                    android:textStyle="bold"
                    android:textSize="11sp"/>

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_box_blue_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>

                 <TextView
                     android:id="@+id/tv_waktu"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:layout_below="@id/tv_subjek1"
                     android:text="11 Februari 2020, 10.30 WIB"
                     android:textSize="11dp"
                     android:fontFamily="@font/montserratr"
                     android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_ket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_waktu"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:text="Pembayaran SPP bulan Januari dan Februar 2020"
                        android:fontFamily="@font/montserratr"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card1"
                android:background="@color/white"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/white"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_identitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Identitas"
                        android:fontFamily="@font/montserratr"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_identitasnama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_identitas"
                        android:text="Nama Siswa"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_identitas"
                        android:text="M. Yandi Fenanda"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_identitaskelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_nama"
                        android:text="Kelas"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_kelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_nama"
                        android:text="XII RPL 3"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card2"
                android:background="@color/white"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/white"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Detail Transaksi"
                        android:fontFamily="@font/montserratr"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_detail"
                        android:text="Nominal"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_nominal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_detail"
                        android:text="RP. 300.000"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_nom"
                        android:background="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_ttl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tv_nom"
                        android:text="Total Pembayaran"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tv_nominal"
                        android:text="RP. 600.000"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card3"
                android:background="@color/white"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/white"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserratr"
                        android:text="Metode Pembayaran"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_metode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_pembayaran"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_payment_blue_24dp" />

                    <TextView
                        android:id="@+id/tv_metode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_metode"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/tv_pembayaran"
                        android:text="Gopay"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_bayar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="11dp"
                        android:layout_below="@id/tv_pembayaran"
                        android:text="RP. 600.000"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserratr"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btn_fav"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_favorit"
                android:layout_below="@id/card4"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="85dp"
                android:src="@drawable/ic_favorite_white_24dp"/>

            <ImageButton
                android:id="@+id/btn_help"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/btn_fav"
                android:background="@drawable/button_help"
                android:layout_below="@id/card4"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/ic_help_white_24dp"/>




        </RelativeLayout>
</ScrollView>